<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HiTEPRO_APP" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bottomColor1</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bottomColor1</item>
        <item name="colorSecondaryVariant">@color/bottomColor1</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="headerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">27dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="clickView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="imageViewLogo">
        <item name="android:layout_width">19dp</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:layout_marginStart">29dp</item>
        <item name="android:layout_marginTop">22dp</item>
    </style>

    <style name="headerTextInView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">17dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
    </style>

    <style name="textInView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">29dp</item>
        <item name="android:paddingEnd">29dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/grayForText</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/bottomColor1</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="tabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:padding">2dp</item>
    </style>



</resources>